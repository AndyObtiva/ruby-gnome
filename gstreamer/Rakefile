            "COPYING.GPLv3",
            "COPYING.LGPLv2.1",
            "COPYING.LGPLv3",
          ],
        }
      ],
    },
  ]
  package.cross_compiling do |spec|
    if /mingw|mswin/ =~ spec.platform.to_s
      spec.add_runtime_dependency("pango", ">= #{_package.version}")
      spec.add_runtime_dependency("gdk_pixbuf2", ">= #{_package.version}")
    end
  end
end
package_task.define
